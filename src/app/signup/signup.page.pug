ion-content
  .login
    .login-content.login-content--signup
      span.login-content__title Registro
      .inputs
        ion-input(
          placeholder="Nombre"
          '[(ngModel)]'="nombre").inputs__input.inputs__input--user
        ion-input(
          placeholder="Apellido"
          '[(ngModel)]'='apellido').inputs__input.inputs__input--password
        ion-input(
          placeholder="Cédula"
          '[(ngModel)]'='cedula').inputs__input.inputs__input--password
        ion-input(
          placeholder="Número telefónico"
          '[(ngModel)]'='numero').inputs__input.inputs__input--password
        ion-input(
          placeholder="Fecha de nacimiento"
          '[(ngModel)]'='fecha').inputs__input.inputs__input--password
        ion-input(
          placeholder="Usuario"
          '[(ngModel)]'='usuario').inputs__input.inputs__input--password
        ion-input(
          placeholder="Contraseña"
          type="password"
          '[(ngModel)]'='contrasena').inputs__input.inputs__input--password
        .inputs.inputs--inline
          ion-select(
            '[(ngModel)]'="provincia",
            '(ionChange)'="changedProvincia()",
            placeholder="Provincia"
            ).inputs__input.inputs__input--inline
            ion-select-option(
              '*ngFor'="let provincia of this.provinces"
              '[value]'="provincia.i") {{provincia.element}}
          ion-select(
            '[(ngModel)]'="canton",
            '(ionChange)'="changedCanton()",
            placeholder="Canton").inputs__input.inputs__input--inline
            ion-select-option(
                '*ngFor'="let canton of this.cantones"
                '[value]'="canton.i") {{canton.element}}
          ion-select(
            '[(ngModel)]'="district",
            '(ionChange)'="changedDistrict",
            placeholder="Distrito").inputs__input.inputs__input--inline
            ion-select-option(
                '*ngFor'="let district of this.districts"
                '[value]'="district.i") {{district.element}}
      .login__submit('(click)'="requestpapi()")
        a.button.login__submit--login Registrarse
      
